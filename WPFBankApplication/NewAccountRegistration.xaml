<Window x:Class="WPFBankApplication.NewAccountRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.FontWeight="Regular"
        
        Title="NewAccountRegistration" mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="632" Width="1300.5">
    <Grid>

        <materialDesign:DialogHost Name="FieldErrorDialog">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="16">
                    <TextBlock FontSize="20">Please enter all fields</TextBlock>
                    <Button FontSize="15" Margin="0 8 0 0" IsDefault="True" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}">OK</Button>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>






        <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                  Mode="PrimaryMid" DockPanel.Dock="Top" Background="#FF5BBAE2" Height="76" >
            <Grid>

                <Button Click="ButtonBase_OnClick" Style="{x:Null}" Foreground="#FF080909" Background="#FF5BB7E2" BorderBrush="#FF5DAFE5" Margin="0,0,1142,0">
                    <Grid>
                        <materialDesign:PackIcon Kind="ArrowLeft" Height="Auto" Width="68" VerticalAlignment="Stretch" Margin="-3,0,0,0"/>
                        <Image  Margin="0,6,1015,0" MouseDown="UIElement_OnMouseDown" >
                        </Image>
                    </Grid>
                </Button>
                <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="43" Width="703" Text="    New account registration"/>
            </Grid>
        </materialDesign:ColorZone>
        <Button Height="39" HorizontalAlignment="Left" Margin="788,552,0,0" Name="btn_save" VerticalAlignment="Top" Width="136" ClipToBounds="False" Click="btn_save_Click">
            <Grid Width="81">
                <materialDesign:PackIcon Kind="ContentSave" Margin="-11,-1,0,-3" Height="22" Width="33" />
                <TextBlock Text="SUBMIT" Margin="26,2,-16,-6" Height="22" VerticalAlignment="Top" />
            </Grid>
        </Button>

        <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" materialDesign:ShadowAssist.ShadowDepth="Depth3" Header="Personal details&#xD;&#xA;" BorderBrush="#ED3D3D" HorizontalAlignment="Left" Height="483" VerticalAlignment="Top" Width="350" Margin="10,100,0,0" Background="White" >
            <Grid>
                <Grid Margin="185,78,42,270">
                    <RadioButton Name="RadioButtonMale" Content="Male" Margin="0,0,10,10"/>
                    <RadioButton Name="RadioButtonFemale" Content="Female" Margin="0,33,0,0" />
                </Grid>


                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="152" Height="31" Margin="175,10,0,0" Click="Button_Click" >
                    <Grid>
                        <TextBlock Text="Upload photo"/>
                        <materialDesign:PackIcon Kind="Image" Margin="-23,2,0,0" />
                    </Grid>
                </Button>
                <Image  Name="AccountHolderImage" HorizontalAlignment="Left" Height="130" VerticalAlignment="Top" Width="152" Margin="10,10,0,0"/>
                <TextBox materialDesign:HintAssist.Hint="First name" TabIndex="1" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"  Height="36" HorizontalAlignment="Left" Margin="14,167,0,0" Name="textBox_firstname" VerticalAlignment="Top" Width="308" >
                </TextBox>
                <TextBox TabIndex="3" materialDesign:HintAssist.Hint="Address" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" Height="38" HorizontalAlignment="Left" Name="textBox_address" VerticalAlignment="Top" Width="310" Margin="12,250,0,0" />
                <TextBox PreviewTextInput="TextBox_phonenumber_OnPreviewTextInput" TabIndex="4" materialDesign:HintAssist.Hint="Phone number" Height="39" HorizontalAlignment="Left" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" Name="textBox_phonenumber" VerticalAlignment="Top" Width="309" Margin="13,290,0,0" TextChanged="textBox_phonenumber_TextChanged" />
                <TextBox TabIndex="5" materialDesign:HintAssist.Hint="Email" Height="38" HorizontalAlignment="Left" Name="textBox_email" VerticalAlignment="Top" Width="310" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" Margin="12,328,0,0" />

                <TextBox TabIndex="2" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Last name" Height="37" HorizontalAlignment="Left" x:Name="textBox_lastname" VerticalAlignment="Top" Width="310" Margin="12,211,0,0" />
                <DatePicker Name="myDatePicker" Style="{DynamicResource MaterialDesignDatePicker}" materialDesign:HintAssist.Hint="Birth Date" HorizontalAlignment="Left" Margin="14,378,0,0" VerticalAlignment="Top" Width="308" Height="29"/>
            </Grid>
        </GroupBox>


        <Grid>
            <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" materialDesign:ShadowAssist.ShadowDepth="Depth3" Header="          Account Details" BorderBrush="#ED3D3D" HorizontalAlignment="Left" Height="235" VerticalAlignment="Top" Width="350"   Margin="397,348,0,0" >
                <Grid>
                    <CheckBox Content="Need ATM Card" Margin="18,8,106,142"/>
                    <CheckBox Content="Need check book" Margin="18,33,106,117"/>
                    <PasswordBox TabIndex="6" materialDesign:HintAssist.Hint="Password" Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}" Height="39" HorizontalAlignment="Left"  x:Name="textBox_pass" VerticalAlignment="Top" Width="279" Margin="20,114,0,0" />
                    <CheckBox Name="CheckBoxMobileNotification" Content="Mobile notifications" Margin="18,62,106,88"/>
                </Grid>



            </GroupBox>
            <materialDesign:PackIcon Kind="Account" Margin="401,359,0,0" Height="26" Width="39"/>
        </Grid>



        <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" materialDesign:ShadowAssist.ShadowDepth="Depth3" Header="Work details" BorderBrush="#ED3D3D" HorizontalAlignment="Left" Height="232" VerticalAlignment="Top" Width="350"  Margin="397,102,0,0" >
            <Grid Name="WorkDetailsGrid">
                <ComboBox SelectionChanged="MyComboBox_OnSelectionChanged" Name="MyComboBox" materialDesign:HintAssist.Hint="Select from following option" Margin="20,44,31,104" Height="32" >
                    <ComboBoxItem Content="Employee" HorizontalAlignment="Left" Width="280" />
                    <ComboBoxItem Content="Self-Employee" HorizontalAlignment="Left" Width="280"/>
                    <ComboBoxItem Content="Student" HorizontalAlignment="Left" Width="280"/>
                    <ComboBoxItem Content="Others" HorizontalAlignment="left" Width="280"/>
                </ComboBox>
                <TextBox Name="WorkDetailsTextBox" Margin="20,100,31,39" />
            </Grid>
        </GroupBox>

        <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="MainSnackbar"
        />


    </Grid>
</Window>
